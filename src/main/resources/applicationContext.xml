<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	   		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	   		http://www.springframework.org/schema/context
	   		http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:property-placeholder location="db.properties"/>

    <bean id="goodDayLuck" class="org.step.spring.example.HaveGoodDay">

    </bean>

    <bean id="goodNightLuck" class="org.step.spring.example.HaveGoodNight">

    </bean>

    <bean id="myCoach" class="org.step.spring.example.TennisCoach" scope="prototype">
        <constructor-arg ref="goodNightLuck"/>
        <property name="saySomething" value="${db.username}"/>
    </bean>
</beans>